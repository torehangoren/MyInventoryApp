<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
  controllerName="goto.inventor.controller.Parent"
>
  <Page id="parentPage" title="Parent View">
    <headerContent>
      <SegmentedButton id="childViewSegmentedButton"
        select=".onSelect"
        width="100%"
      >
        <items>
          <SegmentedButtonItem key="childRoute1" text="Child View 1" />
          <SegmentedButtonItem key="childRoute2" text="Child View 2" />
        </items>
      </SegmentedButton>
    </headerContent>
    <NavContainer id="parentNavContainer"> <!--
      Avoid sap.m.App here. Instead, use sap.m.NavContainer:
      https://github.com/SAP/openui5/issues/1282#issuecomment-280575439
    -->
      <pages>
      	<!-- Child views will be added here by the routing mechanism -->
      </pages>
    </NavContainer>
    <footer>
      <Bar>
        <contentMiddle>
          <Title text="Parent footer"/>
        </contentMiddle>
      </Bar>
    </footer>
  </Page>
</mvc:View>